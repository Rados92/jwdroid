<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        
     
        
  	    
    <FrameLayout
  		android:layout_marginTop="10dip"
        android:id="@+id/slider_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quickaction_slider">   
	    <HorizontalScrollView
	        android:id="@+id/scroll"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:fadingEdgeLength="0dip"	        
	        android:scrollbars="none">
	
	        <LinearLayout
	            android:id="@+id/tracks"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="4dip"
	            android:paddingBottom="4dip" 
	            android:orientation="horizontal">
	        
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dip"
	                android:src="@drawable/quickaction_slider_grip_left" />
	
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="5dip"
	                android:src="@drawable/quickaction_slider_grip_right" />
	                
	        </LinearLayout>
	            
	    </HorizontalScrollView>
	    
	</FrameLayout>
	
	<ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"	
        android:layout_marginTop="-1dip"
        android:src="@drawable/quickaction_arrow_up" />


    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_marginTop="-9dip"
        android:layout_below="@id/slider_container"
        android:src="@drawable/quickaction_arrow_down" />

</RelativeLayout>