<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Form"></style>

    <style name="Form.Layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dip</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Form.Element">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Form.Element.Text">
        <item name="android:textSize">18dip</item>
    </style>

    <style name="Form.Element.Edit">
        <item name="android:textSize">18dip</item>
    </style>

    <style name="Form.Element.TextNote">
        <item name="android:textSize">14dip</item>
    </style>

    <style name="Form.Element.Divider">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="Form.ButtonsLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Form.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dip</item>

    </style>


    <style name="DlgColor"></style>

    <style name="DlgColor.ColorButton">
        <item name="android:layout_width">34dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DlgColor.ColorButton.Light"></style>

    <style name="DlgColor.ButtonContainer">
        <item name="android:layout_width">42dip</item>
        <item name="android:layout_height">42dip</item>
    </style>

    <style name="DlgColor.ActiveBorder">
        <item name="android:layout_width">42dip</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:background">@drawable/dlg_active_border</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="dividerColor">#bbb</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="imageButtonStyle">@style/Button</item>
        <item name="spinnerStyle">@style/Button</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:listViewStyle">@style/ListView</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/primary</item>
        <item name="colorControlActivated">#FFffffff</item>
        <item name="android:textColorPrimary">#FFffffff</item>
        <item name="android:textColor">#FFffffff</item>
    </style>

    <style name="ListView" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">#fff</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">

    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonBorderless">
        <item name="android:textColor">@color/accent</item>
    </style>



</resources>
